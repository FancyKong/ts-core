<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="traceLogId" converterClass="com.jdkcc.ts.common.utils.TraceLogIdConverter"/>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%cyan(%date{HH:mm:ss.SSS}) %magenta([%traceLogId]) %highlight(%-5level) %blue([%file : %line]) %boldGreen(%msg%n)</pattern>
		</encoder>
	</appender>

	<appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>../logs/ts.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>../logs/ts.%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%date{HH:mm:ss.SSS} [%thread] [%traceLogId] %-5level %logger{36} [%file : %line] - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- project default level -->
	<logger name="com.jdkcc.ts" level="DEBUG" />


	<root level="INFO">
		<appender-ref ref="console" />
		<appender-ref ref="rollingFile" />
	</root>

</configuration>