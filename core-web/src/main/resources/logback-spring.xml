<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />

    <conversionRule conversionWord="traceLogId" converterClass="com.jdkcc.ts.common.util.TraceLogIdConverter"/>

    <logger name="org.springframework.web" level="INFO"/>
    <logger name="com.jdkcc.ts" level="TRACE" />

    <springProfile name="dev">
        <logger name="com.jdkcc.ts" level="DEBUG" />
        <logger name="org.hibernate" level="DEBUG" />
        <logger name="org.springframework.web" level="DEBUG"/>

        <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%cyan(%date{HH:mm:ss.SSS}) %magenta([%traceLogId]) %highlight(%-5level) %blue([%file : %line]) %boldGreen(%msg%n)</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>TRACE</level>
            </filter>
        </appender>
    </springProfile>

    <springProfile name="prod">
        <logger name="com.jdkcc.ts" level="WARN" />
        <logger name="org.hibernate" level="WARN" />
        <logger name="org.springframework.web" level="WARN"/>

        <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>../logs/ts.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>../logs/ts.%d{yyyy-MM-dd}.log</fileNamePattern>
                <!-- keep 30 days' worth of history -->
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%date{HH:mm:ss.SSS} [%thread] [%traceLogId] %-5level %logger{36} [%file : %line] - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>


</configuration>