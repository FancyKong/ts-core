<mapper namespace="com.jdkcc.ts.dal.mapper.JUserMapper">
    <resultMap id="BaseResultMap" type="com.jdkcc.ts.dal.entity.Customer">
        <id     column="ID"             property="id"               jdbcType="BIGINT"/>
        <result column="NICKNAME"       property="nickname"         jdbcType="VARCHAR"/>
        <result column="TELEPHONE"      property="telephone"        jdbcType="VARCHAR"/>
        <result column="PASSWORD"       property="password"         jdbcType="VARCHAR"/>
        <result column="CREATED_TIME"   property="createdTime"      jdbcType="TIMESTAMP"/>
        <result column="MODIFIED_TIME"  property="modifiedTime"     jdbcType="TIMESTAMP"/>
        <result column="IS_ACTIVE"      property="active"           jdbcType="INTEGER"/>
    </resultMap>
    <sql id="Base_Column_List">
        ID,
        NICKNAME,
        TELEPHONE,
        PASSWORD,
        CREATED_TIME,
        MODIFIED_TIME,
        IS_ACTIVE
    </sql>

    <insert id="insert" parameterType="com.jdkcc.ts.dal.entity.Customer">
        INSERT INTO T_CUSTOMER (
        <include refid="Base_Column_List"/>
        )
        VALUES (
        0,
        #{nickname,jdbcType=VARCHAR},
        #{telephone,jdbcType=VARCHAR},
        #{password,jdbcType=VARCHAR},
        #{createdTime,jdbcType=TIMESTAMP},
        #{modifiedTime,jdbcType=TIMESTAMP},
        #{active,jdbcType=INTEGER})
    </insert>

    <update id="update" parameterType="com.jdkcc.ts.dal.entity.Customer">
        INSERT INTO T_CUSTOMER (
        <include refid="Base_Column_List"/>
        )
        VALUES (
        #{id,jdbcType=BIGINT},
        #{nickname,jdbcType=VARCHAR},
        #{telephone,jdbcType=VARCHAR},
        #{password,jdbcType=VARCHAR},
        #{createdTime,jdbcType=TIMESTAMP},
        #{modifiedTime,jdbcType=TIMESTAMP},
        #{active,jdbcType=INTEGER})
        WHERE
        ID = #{id,jdbcType=BIGINT}
    </update>

    <select id="findOne" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM T_CUSTOMER WHERE ID = #{id,jdbcType=BIGINT}
    </select>

    <select id="count" resultMap="java.lang.Long" parameterType="java.lang.Long">
        SELECT count(*) FROM T_CUSTOMER
    </select>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE  FROM T_CUSTOMER WHERE ID = #{id,jdbcType=BIGINT}
    </delete>

    <select id="findAll" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List"/>
        FROM T_CUSTOMER
        WHERE ID = #{id,jdbcType=BIGINT}
        limit #{0,jdbcType=INTEGER},#{1,jdbcType=INTEGER}
        ORDER BY ID
    </select>

    <select id="findByTelephone" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM T_CUSTOMER WHERE TELEPHONE = #{telephone,jdbcType=VARCHAR}
